{
  "name": "kargo-isletme-sistemi",
  "version": "1.0.0",
  "description": "Kocaeli Üniversitesi - Kargo İşletme Sistemi (VRP Optimization)",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:optimizer\"",
    "dev:api": "npx ts-node -P apps/api/tsconfig.json -r tsconfig-paths/register apps/api/src/main.ts",
    "dev:web": "cd apps/web && npx next dev",
    "dev:optimizer": "cd apps/optimizer && ../../.venv/Scripts/python.exe -m uvicorn main:app --reload --port 5000",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:push": "cd apps/api && npx prisma db push",
    "db:generate": "cd apps/api && npx prisma generate",
    "db:studio": "cd apps/api && npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "overrides": {
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/platform-express": "11.1.9",
    "rxjs": "7.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Kocaeli Üniversitesi",
  "license": "MIT"
}
